<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="CustomTabText" parent="TextAppearance.Design.Tab">
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
    </style>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="bottomSheetDialogTheme">@style/BottomSheetDialog</item>
    </style>

    <!-- Style chÃ­nh cho BottomSheetDialog -->
    <style name="BottomSheetDialog" parent="Theme.Design.Light.BottomSheetDialog">
        <item name="android:windowIsFloating">false</item>
        <item name="android:statusBarColor">@android:color/transparent</item>
        <item name="android:navigationBarColor">@android:color/transparent</item>
        <item name="android:windowBackground">@android:color/transparent</item>
        <item name="android:backgroundDimEnabled">true</item>
        <item name="android:backgroundDimAmount">0.5</item>
        <item name="bottomSheetStyle">@style/BottomSheetStyle</item>
    </style>

    <!-- Style cho BottomSheet container -->
    <style name="BottomSheetStyle" parent="Widget.Design.BottomSheet.Modal">
        <item name="android:background">@android:color/transparent</item>
    </style>

    <style name="BottomNavigationView.NoRipple" parent="Widget.Design.BottomNavigationView">
        <item name="itemBackground">@android:color/transparent</item>
        <item name="android:background">@color/white</item>
    </style>

    <!-- Time Picker Style -->
    <style name="TimePickerStyle" parent="Theme.AppCompat.Light">
        <item name="colorControlNormal">#E0E0E0</item>
        <item name="colorControlActivated">#333333</item>
        <item name="android:textColorPrimary">#333333</item>
        <item name="android:textSize">32sp</item>
        <item name="android:timePickerMode">spinner</item>
        <item name="android:numbersTextColor">#333333</item>
        <item name="android:numbersBackgroundColor">@android:color/transparent</item>
        <item name="android:numbersSelectorColor">#E0E0E0</item>
    </style>
</resources>