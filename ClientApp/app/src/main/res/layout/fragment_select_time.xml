<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    tools:context=".ui.service.cleaningservice.SelectTimeFragment">

    <LinearLayout
        android:id="@+id/ll_header"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="48dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/iv_back"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:background="@android:color/transparent"
            android:padding="8dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_back" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:text="Chọn thời gian làm việc"
            android:textColor="@color/black"
            android:textSize="24sp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginHorizontal="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="70dp"
        android:paddingVertical="16dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/ll_header">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Thời gian làm việc"
                    android:textColor="@color/black"
                    android:textSize="20sp"
                    android:textStyle="bold" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:text="Chọn ngày làm"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                    <TextView
                        android:id="@+id/tv_month_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        tools:text="Tháng 9/2025"
                        android:textStyle="bold"
                        android:textColor="@color/black"
                        android:textSize="16sp" />
                </LinearLayout>
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_marginTop="8dp"
                    android:id="@+id/rcv_list_day"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    tools:listitem="@layout/item_day_of_week"
                    app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
                    android:orientation="horizontal"
                    tools:itemCount="7"
                    />
                <TextView
                    android:visibility="gone"
                    android:id="@+id/tv_selected_dates"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="16dp"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    android:gravity="center"
                    tools:text="07/09/2025 - 10/09/2025 (3 ngày)" />

                <LinearLayout
                    android:paddingVertical="12dp"
                    android:paddingHorizontal="8dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:layout_marginTop="20dp"
                    android:background="@drawable/bg_edt_white"
                    android:orientation="horizontal">
                    <ImageView
                        android:layout_marginStart="8dp"
                        android:layout_width="28dp"
                        android:layout_height="28dp"
                        android:src="@drawable/ic_timecircle"
                        />
                    <TextView
                        android:layout_marginStart="12dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Chọn giờ làm"
                        android:layout_weight="1"
                        android:textColor="@color/black"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        />
                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_btn_setup_time"
                        android:layout_marginEnd="4dp"
                        android:elevation="0dp"
                        app:cardElevation="0dp"
                        app:cardCornerRadius="8dp"
                        app:cardBackgroundColor="#F5F5F5"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content">
                        <LinearLayout
                            android:paddingVertical="8dp"
                            android:gravity="center"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <TextView
                                android:id="@+id/hourText"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:text="14"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:minWidth="24dp"
                                android:minHeight="24dp"
                                android:padding="4dp"
                                android:focusable="false"
                                android:clickable="false"
                                android:longClickable="false"
                                android:inputType="none"
                                android:importantForAutofill="no"
                                android:autofillHints=""
                                android:contentDescription="Giờ"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:lines="1"
                                android:minLines="1"
                                android:scrollHorizontally="true"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textAllCaps="false"
                                android:textIsSelectable="false"
                                android:textScaleX="1.0"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.0"
                                android:lineSpacingExtra="0sp"
                                android:lineSpacingMultiplier="1.0"
                                android:shadowColor="#00000000"
                                android:shadowDx="0.0"
                                android:shadowDy="0.0"
                                android:shadowRadius="0.0"
                                android:typeface="normal" />
                            <View
                                android:layout_width="1dp"
                                android:layout_height="24dp"
                                android:layout_marginHorizontal="4dp"
                                android:layout_marginVertical="4dp"
                                android:background="@color/black"
                                android:contentDescription=""
                                android:focusable="false"
                                android:importantForAccessibility="no"
                                android:longClickable="false"
                                android:visibility="visible" />
                            <TextView
                                android:id="@+id/minuteText"
                                android:gravity="center"
                                android:layout_weight="1"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                tools:text="00"
                                android:textStyle="bold"
                                android:textColor="@color/black"
                                android:textSize="16sp"
                                android:minWidth="24dp"
                                android:minHeight="24dp"
                                android:padding="4dp"
                                android:focusable="false"
                                android:clickable="false"
                                android:longClickable="false"
                                android:inputType="none"
                                android:importantForAutofill="no"
                                android:autofillHints=""
                                android:contentDescription="Phút"
                                android:singleLine="true"
                                android:ellipsize="end"
                                android:maxLines="1"
                                android:lines="1"
                                android:minLines="1"
                                android:scrollHorizontally="true"
                                android:textAlignment="center"
                                android:includeFontPadding="false"
                                android:textAllCaps="false"
                                android:textIsSelectable="false"
                                android:textScaleX="1.0"
                                android:fontFamily="sans-serif-medium"
                                android:letterSpacing="0.0"
                                android:lineSpacingExtra="0sp"
                                android:lineSpacingMultiplier="1.0"
                                android:shadowColor="#00000000"
                                android:shadowDx="0.0"
                                android:shadowDy="0.0"
                                android:shadowRadius="0.0"
                                android:typeface="normal" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Lưu ý: Số người tuyển không quá 10"
                    android:textColor="@color/black"
                    android:textSize="16sp"
                    android:textStyle="normal"
                    android:layout_marginTop="20dp"
                    />
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:paddingHorizontal="12dp"
        android:paddingVertical="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_button_next"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            app:cardBackgroundColor="#16B75A"
            app:cardCornerRadius="8dp"
            app:cardElevation="0dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:paddingHorizontal="8dp"
                android:paddingVertical="14dp">

                <TextView
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="bold"
                    tools:text="216,000 VND/1h" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="end"
                    android:text="Tiếp theo"
                    android:textColor="@color/white"
                    android:textSize="16sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </androidx.cardview.widget.CardView>

    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>