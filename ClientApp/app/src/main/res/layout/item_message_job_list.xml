<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="16dp"
    android:layout_marginEnd="64dp"
    android:layout_marginTop="8dp"
    android:layout_marginBottom="8dp">

    <!-- AI Message Header -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="8dp">

        <ImageView
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_chat_bot"
            android:layout_marginEnd="8dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Trợ lý AI"
            android:textSize="12sp"
            android:textColor="@color/gray_600" />

    </LinearLayout>

    <!-- Job List Container -->
    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:cardCornerRadius="12dp"
        app:cardElevation="2dp"
        android:layout_marginBottom="4dp"
        app:cardBackgroundColor="@color/gray_50">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="16dp">

            <!-- Header Text -->
            <TextView
                android:id="@+id/tvJobListHeader"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Tôi tìm thấy các công việc sau cho bạn:"
                android:textSize="14sp"
                android:textColor="@color/gray_800"
                android:layout_marginBottom="12dp" />

            <!-- Job List RecyclerView -->
            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvJobList"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:nestedScrollingEnabled="false" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

    <!-- Timestamp -->
    <TextView
        android:id="@+id/tvTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="start"
        android:textSize="10sp"
        android:textColor="@color/gray_400"
        android:layout_marginTop="4dp" />

</LinearLayout>
