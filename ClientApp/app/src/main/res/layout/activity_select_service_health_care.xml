<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical"
    tools:context=".ui.service.healthcareservice.SelectServiceHealthCareActivity">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:id="@+id/ll_header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="48dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:id="@+id/iv_back"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_back" />

            <LinearLayout
                android:id="@+id/ll_content_header"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="horizontal"
                android:paddingHorizontal="4dp">

                <ImageView
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    android:src="@drawable/ic_location_marker" />

                <TextView
                    android:id="@+id/tv_location"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:textColor="@color/black"
                    android:textSize="24sp"
                    android:textStyle="bold"
                    tools:text="16M Hem A33 ..." />
            </LinearLayout>


            <ImageView
                android:id="@+id/iv_info"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@android:color/transparent"
                android:padding="8dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_info" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/ll_content"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginHorizontal="16dp"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="70dp"
            android:paddingVertical="16dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/ll_header">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:scrollbars="none">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <LinearLayout
                        android:visibility="visible"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_edt_white"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="8dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_multi_user"
                            />
                        <TextView
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Số người tuyển"
                            android:layout_weight="2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/gray_nhat"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <TextView
                                    android:text="0"
                                    android:id="@+id/edt_number_of_people"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:background="@android:color/transparent"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_edt_white"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="8dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_baby"
                            />
                        <TextView
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Số trẻ em"
                            android:layout_weight="2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/gray_nhat"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <EditText
                                    android:id="@+id/edt_number_of_people_baby"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:background="@android:color/transparent"
                                    android:hint="0"
                                    android:textColorHint="@color/black"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <LinearLayout
                        android:visibility="visible"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_edt_white"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="8dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_old_person"
                            />
                        <TextView
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Số người già"
                            android:layout_weight="2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/gray_nhat"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <EditText
                                    android:id="@+id/edt_number_of_people_older"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:background="@android:color/transparent"
                                    android:hint="0"
                                    android:textColorHint="@color/black"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                    <LinearLayout
                        android:visibility="visible"
                        android:paddingVertical="12dp"
                        android:paddingHorizontal="8dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:layout_marginBottom="20dp"
                        android:background="@drawable/bg_edt_white"
                        android:orientation="horizontal">
                        <ImageView
                            android:layout_marginStart="8dp"
                            android:layout_width="28dp"
                            android:layout_height="28dp"
                            android:src="@drawable/ic_disabled_person"
                            />
                        <TextView
                            android:layout_marginStart="12dp"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:text="Số người khuyết tật"
                            android:layout_weight="2"
                            android:textColor="@color/black"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            />
                        <androidx.cardview.widget.CardView
                            android:layout_marginEnd="12dp"
                            android:layout_weight="1"
                            android:layout_width="0dp"
                            app:cardCornerRadius="8dp"
                            app:cardElevation="0dp"
                            app:cardBackgroundColor="@color/gray_nhat"
                            android:layout_height="wrap_content">
                            <LinearLayout
                                android:padding="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent">
                                <EditText
                                    android:id="@+id/edt_number_of_people_disable"
                                    android:gravity="center"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:inputType="number"
                                    android:background="@android:color/transparent"
                                    android:hint="0"
                                    android:textColorHint="@color/black"
                                    android:textSize="16sp"
                                    android:textColor="@color/black"
                                    android:imeOptions="actionDone"
                                    android:maxLines="1"
                                    />
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_error_message"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:layout_marginBottom="8dp"
                        android:text="Vui lòng nhập ít nhất 1 người cần chăm sóc (trẻ em, người khuyết tật hoặc người lớn tuổi)"
                        android:textColor="#FF6B6B"
                        android:textSize="14sp"
                        android:visibility="gone"
                        android:gravity="center"
                        android:background="@drawable/bg_error_message"
                        android:padding="8dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Thời lượng"
                        android:textColor="@color/black"
                        android:textSize="20sp"
                        android:textStyle="bold" />

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/rcv_duration"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="12dp"
                        android:paddingHorizontal="8dp"
                        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"
                        app:spanCount="2"
                        android:orientation="vertical"
                        tools:listitem="@layout/item_duration_option"
                        tools:itemCount="7"
                        />



                    <androidx.cardview.widget.CardView
                        android:id="@+id/card_view_job_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="20dp"
                        android:layout_marginBottom="4dp"
                        android:clickable="true"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackground"
                        app:cardCornerRadius="8dp"
                        app:cardElevation="0dp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="#F1F1F1"
                            android:gravity="center_vertical"
                            android:orientation="horizontal"
                            android:paddingHorizontal="6dp"
                            android:paddingVertical="16dp">

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:layout_marginStart="20dp"
                                android:layout_marginEnd="10dp"
                                android:src="@drawable/ic_greenbook" />

                            <TextView
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_marginHorizontal="8dp"
                                android:layout_weight="1"
                                android:text="Chi tiết công việc"
                                android:textColor="@color/black"
                                android:textSize="16sp" />

                            <ImageView
                                android:layout_width="24dp"
                                android:layout_height="24dp"
                                android:src="@drawable/ic_arrowright" />
                        </LinearLayout>
                    </androidx.cardview.widget.CardView>
                </LinearLayout>

            </ScrollView>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:paddingHorizontal="12dp"
            android:paddingVertical="12dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_button_next"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#16B75A"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingHorizontal="8dp"
                    android:paddingVertical="14dp">

                    <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        tools:text="216,000 VND/1h" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:text="Tiếp theo"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        android:textStyle="normal" />
                </LinearLayout>
            </androidx.cardview.widget.CardView>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>


</FrameLayout>