<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.service.cleaningservice.CleaningServiceDetailFragment">
    <LinearLayout
        android:layout_gravity="bottom"
        android:background="@drawable/bg_login"
        android:backgroundTint="#F9F9F9"
        android:elevation="4dp"
        android:orientation="vertical"
        android:paddingTop="16dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="Chi tiết công việc"
            android:textColor="@color/black"
            android:textSize="20sp"
            android:textStyle="bold" />

        <com.google.android.material.tabs.TabLayout
            android:id="@+id/tab_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:layout_marginHorizontal="12dp"
            android:paddingVertical="8dp"
            app:tabGravity="center"
            android:tooltipText="@null"
            app:tabIndicatorColor="@android:color/transparent"
            app:tabIndicatorHeight="0dp"
            app:tabMode="scrollable"
            app:tabSelectedTextColor="@color/white"
            app:tabTextAppearance="@style/TabTextAppearance"
            app:tabTextColor="@color/black"
            app:tabMinWidth="0dp"
            app:tabPaddingStart="4dp"
            app:tabPaddingEnd="4dp" />

        <androidx.viewpager2.widget.ViewPager2
            android:elevation="0dp"
            android:background="@drawable/bg_edt_white"
            android:id="@+id/view_pager_2"
            android:layout_width="match_parent"
            android:layout_height="400dp"
            android:layout_marginHorizontal="12dp"
            android:layout_marginVertical="12dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#F9F9F9"
            android:paddingHorizontal="10dp"
            android:paddingVertical="14dp">

            <androidx.cardview.widget.CardView
                android:id="@+id/card_view_button_close"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="12dp"
                android:clickable="true"
                android:focusable="true"
                android:foreground="?attr/selectableItemBackground"
                app:cardBackgroundColor="#F2F2F2"
                app:cardCornerRadius="8dp"
                app:cardElevation="0dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingVertical="8dp"
                    android:text="Đóng"
                    android:textColor="#16B75A"
                    android:textSize="18sp" />
            </androidx.cardview.widget.CardView>

        </LinearLayout>
    </LinearLayout>
</FrameLayout>