<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="horizontal"
    android:background="@color/white"
    tools:context=".ui.payment.PaymentQrFragment">
    <LinearLayout
        android:layout_gravity="center"
        android:orientation="vertical"
        android:padding="16dp"
        android:layout_marginHorizontal="12dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <ImageView
            android:id="@+id/iv_close"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_close"
            android:layout_gravity="end"
            />
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Mã thanh toán"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginTop="12dp"
            android:layout_gravity="center"
            />
        <ImageView
            android:layout_marginTop="12dp"
            android:id="@+id/iv_qr"
            android:layout_gravity="center_horizontal"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:src="@drawable/img_qr_error"
            />
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Dịch vụ:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_service_tyoe"
                android:layout_marginStart="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="Dọn dẹp"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="8dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Phí đăng bài:"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                />
            <TextView
                android:layout_weight="1"
                android:id="@+id/tv_price"
                android:layout_marginStart="4dp"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                tools:text="100000 VND"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_save_qr"
            android:layout_marginTop="20dp"
            app:cardCornerRadius="4dp"
            app:cardElevation="0dp"
            android:layout_width="match_parent"
            android:layout_marginHorizontal="24dp"
            app:cardBackgroundColor="@color/xanh"
            android:layout_height="wrap_content">
            <TextView
                android:paddingVertical="6dp"
                android:layout_gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Lưu mã QR về máy"
                android:textColor="@color/white"
                android:textSize="16sp"
                android:textStyle="bold"
                />
        </androidx.cardview.widget.CardView>
    </LinearLayout>

</LinearLayout>